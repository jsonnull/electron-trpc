    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "packageManager": "pnpm@8.6.3",
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.1",
    "@playwright/test": "^1.35.1",
    "playwright": "^1.35.1",
    "prettier": "^2.8.8",
    "typescript": "^5.1.3",
    "unocss": "^0.53.1",
    "vite": "^4.3.9",
    "vitepress": "1.0.0-beta.2",
    "vue": "^3.3.4"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "pnpm": {
    "requiredScripts": [
      "build"
